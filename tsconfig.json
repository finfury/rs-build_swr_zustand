{
	"compilerOptions": {
		"target": "ES2020",
		"jsx": "react-jsx",
		"lib": ["DOM", "ES2020"],
		"useDefineForClassFields": true,
		"rootDir": "src",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@/styles/*": ["./src/shared/static/styles/*"],
			"@/images/*": ["./src/shared/static/images/*"]
		},
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "rsbuild.config.ts"]
}
